<h1>Add new store:</h1>

<form action="/stores" method="post">
  <div class="form-group">
    <input id="name" name="name" type="test">
  </div>
  <div class="form-group">
     <label for="brand_ids[]">Select brands that this store carries:</label>
     <% if @brands.any?() %>
     <% @brands.each() do |brand| %>
     <div class="checkbox">
       <label>
         <input type="checkbox" name="brand_ids[]" value="<%= brand.id()%>"><%= brand.name()%>
       </label>
     </div>
     <% end %>
     <%else%>
     <p>Please add a new brand below.</p>
     <% end %>
   </div>
  <button type="submit" class="btn btn-info">Add store</button>
</form>
